pages = {961–965},
numpages = {5},
keywords = {Tobacco, behavioral similarity, health communication, identification with the protagonist, narrative persuasion, narrative transportation, narrative voice},
location = {Le\'{o}n, Spain},
series = {TEEM'19}
}

