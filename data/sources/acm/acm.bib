booktitle = {Proceedings of the 3rd International Conference on Technological Ecosystems for Enhancing Multiculturality},
pages = {375–382},
numpages = {8},
keywords = {abstract, editing, error, journal, questionnaire, revision, scholarly publishing, survey, translation},
