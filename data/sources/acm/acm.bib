isbn = {9781450389969},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3456887.3457055},
doi = {10.1145/3456887.3457055},
abstract = {Development of contemporary multi culture is experiencing a process from regional nationalization to globalization. The education of socialist core values in rural areas is also developing and changing under the background of multi culture. In the process of development, it presents some progressive and some undesirable characteristics. Therefore, many people think that multiculturalism should be the focus of rural socialist core values education. This paper puts forward the research on the education of rural socialist core values under the background of multi culture. Through the investigation and analysis of this paper, we can see that multi culture has the advantages of attaching importance to ceremony and etiquette, model demonstration and so on, and can promote the development of rural social core values education. Based on the current situation of socialist core values education, this paper studies the application of multiculturalism in different regions and the satisfaction of multiculturalism in different groups. Through comparative analysis, it shows that both urban and rural people are more than 80% satisfied with multiculturalism, which provides a guarantee for the education of rural socialist core values.},
booktitle = {2021 2nd International Conference on Computers, Information Processing and Advanced Education},
pages = {738–741},
numpages = {4},
location = {Ottawa, ON, Canada},
series = {CIPAE 2021}
}

