@inproceedings{10.1145/3362789.3362886,
author = {Alabdullatif, Hend and Iturbide, \'{A}ngel Vel\'{a}zquez},
title = {Personality traits and the intention to continue to use the Smart Learning Technologies: The role played by internal and external motivations in the relationship between the Big Five Personality Traits and the Intention to Continue to Use MOOCs (ICM)},
