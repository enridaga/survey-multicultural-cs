@inproceedings{10.1145/3362789.3362879,
author = {Abaunza, Geovanny and Martinez-Abad, Fernando and Conde-Rodriguez, Mª J.},
title = {Web applications in the EFL class in contexts rural school Colombian: Aplicaciones web en la clase de EFL en contextos de escuela rural colombiana},
year = {2019},
isbn = {9781450371919},
