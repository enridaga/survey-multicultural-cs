abstract = {The society in which we live today is the result of the progress made over many years in industry, medicine, technology, biology, food, etc. An informed society with a solid scientific culture understands the development of science and technology as a fundamental element for its common evolution. In countries that have a more developed scientific culture, public support for major science is usually found and this favors governments having a more positive attitude towards the need to devote resources to research and development. Without science society does not advance, innovation must be applied to all the pillars of society. In this context, the actors involved in the scientific sector have a fundamental role in the development of the science of the future.The question that is launched is: where does science go in Portugal? What are the main concerns of each individual person within their own context? The opinion of representative profiles of the whole sector is collected: specialized journalists, editors of scientific journals, researchers and teachers, and doctoral students who join the academy. The created content will show a story that is built through personal opinions in interviews, video, podcast and social networks integrating into the project website.As expected results, it is desired to give visibility to the importance of reflecting on the whole of the science sector to face the future with positive perspectives that involve all profiles. The points in common are sought, the map of the great issues that generate concern and the divergences between all the actors that show us a way forward.},
booktitle = {Proceedings of the Seventh International Conference on Technological Ecosystems for Enhancing Multiculturality},
pages = {870–878},
numpages = {9},
keywords = {Researchers, audiovisual journalism, podcast, science communication, scientific communication, social media, transmedia storytelling},
location = {Le\'{o}n, Spain},
series = {TEEM'19}
}

@inproceedings{10.1145/3362789.3362872,
