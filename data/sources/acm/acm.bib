doi = {10.1145/3362789.3362879},
abstract = {This research was developed with 30 high school students of sixth grade in the Southwest part of Colombia. The sample of study presents a vulnerable rural context for being located in armed conflict zones and low socio-economic status. These students were subjected to a technological treatment (the Duolingo web application for schools, desktop version) supported by the b-Learning approach in the English Foreign language class that was attended for 4 months, one hour per week. The objective of the study comprises two hypotheses: The H1 states that there is a correlation between the academic achievements in English as a Foreign Language class, and the points of experience obtained with Duolingo. On the other hand, the H2 states that the apprehension of knowledge in the English class according to the points of experience obtained with Duolingo will be greater in women than in men. Then the objectives of this research are: to verify whether it exists a relationship between the variables of study (Academic Achievements in English as a Foreign Language class and Points of Experience awarded by Duolingo) and to contrast the variables Gender of the participants and Points of experience. The variables to analyze were the students' points of experience awarded by Duolingo supported by the b-Learning context, the gender of the students, and the academic achievements in English as a Foreign Language class. The results demonstrated that there is a significant relationship between the academic achievements in English and the use of Duolingo. Regarding the hypothesis contrast between gender of the participants and the points of experience obtained with Duolingo, it was not significant. It can be concluded that the integration of the b-Learning approach and Duolingo may be favorable in the teaching-learning process of English as a foreign language evincing a significant influence in the academic achievements of the students subjected to the technological treatment.},
booktitle = {Proceedings of the Seventh International Conference on Technological Ecosystems for Enhancing Multiculturality},
pages = {613–618},
numpages = {6},
keywords = {Duolingo, EFL, Secondary School, Web application, b-Learning},
location = {Le\'{o}n, Spain},
series = {TEEM'19}
}

@inproceedings{10.1145/3362789.3362878,
author = {Buend\'{\i}a, F\'{e}lix and Gayoso-Cabada, Joaquin and Juanes-M\'{e}ndez, Juan-Antonio and Mart\'{\i}n-Izquierdo, Manuela and Sierra, Jos\'{e}-Luis},
title = {Cataloguing Spanish Medical Reports with UMLS Terms},
year = {2019},
isbn = {9781450371919},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3362789.3362878},
doi = {10.1145/3362789.3362878},
abstract = {UMLS (Unified Medical Language System) is one of the most comprehensive terminological resources for the medical domain. Thus, the provision of instruments to assist in the cataloguing of medical reports with UMLS is of utmost relevance, especially when these reports are written in unstructured free-text natural language. For this purpose, it is possible to use tools that, like MetaMap, enable the automatic annotation of clinical texts with UMLS terms. However, these tools typically work on reports written in English, which seriously hinders their applicability to other languages. In this paper, we describe an approach to mitigate these shortcomings, which pipelines state-of-the-art language translation services with automatic mapping tools. We demonstrate the feasibility of the approach by combining Google Translate with MetaMap and by using the resulting pipeline to catalog, with UMLS, a representative set of Spanish-written X-Ray Thorax reports corresponding to images taken from the Indiana Chest X-ray radiology corpus. The resulting cataloguing is not significantly different, in quality, from that obtained through the direct application of MetaMap on a similar set of reports written in English and selected from this Indiana Chest X-ray corpus.},
booktitle = {Proceedings of the Seventh International Conference on Technological Ecosystems for Enhancing Multiculturality},
pages = {423–430},
numpages = {8},
keywords = {Clinical Reports, Google Translate, Medical knowledge, MetaMap, UMLS},
location = {Le\'{o}n, Spain},
series = {TEEM'19}
}

