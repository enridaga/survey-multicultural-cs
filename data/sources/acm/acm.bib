@inproceedings{10.1145/3434780.3436626,
author = {Casal-Guisande, Manuel and Cerqueiro-Peque\~{n}o, Jorge and Comesa\~{n}a-Campos, Alberto and Bouza-Rodr\'{\i}guez, Jos\'{e} Benito},
