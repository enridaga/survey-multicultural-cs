@inproceedings{10.1145/3362789.3362827,
author = {Sabirova, Elvira and Zakirova, Venera and Valeeva, Roza A. and Mena, Juanjo},
title = {Educational Platforms for Children in Teaching Mathematics: Russian Case},
year = {2019},
isbn = {9781450371919},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3362789.3362827},
doi = {10.1145/3362789.3362827},
abstract = {Contemporary development of informational technologies conditions necessity to change the ways of learning activity in education. Renovated informational and educational environment has new possibilities for effective teaching of children. At the same time pedagogical community is concerned by problem of quality decrease in learners' mathematical training, including elementary school children. The reasons in decreasing the quality of mathematical training are various -these are weak will in overcoming difficulties, absence at lessons, low level of cognitive activity and other causes. It is needed and very important to use new possibilities of informational and educational environment in organizing mathematics' teaching of junior pupils. So, qualitative educational result can be achieved only in conditions of teaching mathematics to junior pupils in modern informational and educational environment that can provide neutralization of various causes in quality decrease of mathematical training. One of the most effective digital education sources are educational platforms. With the help of these platforms, there can be filled blanks in knowledge and worked out skills of learners. Purpose of this research: analysis of Russian-language educational platforms with intent of effective usage in teaching mathematics to children of junior school age. Research was carried out in Kazan city of Russian Federation Tatarstan Republic. In this research, there were applied comparative and correlative analyses, survey and diagnostic methods (questionnaires, tests) that help to find effective Russian-language educational platforms for usage in teaching mathematics to children of junior school age. There were analysed following educational platforms: «Uchi.ru» https://uchi.ru, «Mat-Reshka» http://www.mat-reshka.com, «IClass» http://www.yaklass.ru, «IQsha» https://iqsha.ru/, « Grade 39» http://www.klass39.ru.},
booktitle = {Proceedings of the Seventh International Conference on Technological Ecosystems for Enhancing Multiculturality},
